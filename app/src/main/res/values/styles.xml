<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="background">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearanceBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="TextAppearanceBodyBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>
</resources>
